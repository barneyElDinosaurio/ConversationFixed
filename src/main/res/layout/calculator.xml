<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/mainView" >

    <TextView
        android:id="@+id/txtSetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar una operación como contraseña y presiona la tecla =" />

    <EditText
        android:id="@+id/txtOperation"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:gravity="right"
        android:paddingRight="5dp"
        android:inputType="none"
        android:maxLines="1"
        android:text="0"
        android:textSize="26sp"
        android:textStyle="normal"
        android:typeface="monospace"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:background="@null"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/numberscalculatorcolor"/>

    <EditText
        android:id="@+id/txtCalc"
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:gravity="right"
        android:paddingRight="2dp"
        android:inputType="none"
        android:maxLines="1"
        android:text="0"
        android:textSize="54sp"
        android:textStyle="normal"
        android:typeface="monospace"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:background="@null"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/numberscalculatorcolor"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnC"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/custombutton3"
            android:gravity="center"
            android:padding="0px"
            android:text="c"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/operatorNumbersletter"
            />

        <Button
            android:id="@+id/btnBS"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="←"
            android:background="@drawable/custombutton2"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/operatorNumbersletter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="7"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnEight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="8"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnNine"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="9"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="/"
            android:background="@drawable/custombutton2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/operatorNumbersletter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnFour"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="4"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnFive"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="5"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnSix"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="6"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="x"
            android:background="@drawable/custombutton2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/operatorNumbersletter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOne"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="1"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="2"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnThree"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="3"
            android:background="@drawable/custombutton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="-"
            android:background="@drawable/custombutton2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/operatorNumbersletter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="."
            android:background="@drawable/custombutton"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnZero"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_span="2"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="0"
            android:background="@drawable/custombutton"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="="
            android:background="@drawable/custombutton"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/numberscalculatorcolor"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="+"
            android:background="@drawable/custombutton2"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/operatorNumbersletter"/>
    </LinearLayout>

</LinearLayout>